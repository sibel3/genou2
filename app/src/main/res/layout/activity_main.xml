<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblSpeed"
        android:layout_width="352dp"
        android:layout_height="77dp"
        android:layout_below="@id/lblAngle"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp" />


    <Button
        android:id="@+id/btnBluetooth"
        android:layout_width="198dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:onClick="onClickBle"
        android:text="Connect to sensors" />

    <TextView
        android:id="@+id/lblAngle"
        android:layout_width="373dp"
        android:layout_height="73dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/lblConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"

        android:layout_above="@id/btnBluetooth"
        android:layout_marginBottom="112dp"
        android:text="no device connected"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="221dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@id/btnBluetooth"
        android:layout_toRightOf="@id/btnBluetooth"
        android:onClick="onCamera"
        android:text="Camera" />

</RelativeLayout>